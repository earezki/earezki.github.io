---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import PostCard from '../components/PostCard.astro';
import SearchBox from '../components/SearchBox.astro';
import readingTime from '../utils/readingTime';
import { SITE } from '../config/site';

// Fetch and sort all posts by publication date (newest first)
const allPosts = (await getCollection('posts'))
  .map((post: CollectionEntry<'posts'>) => ({ 
    ...post, 
    readingTime: readingTime(post.body) 
  }))
  .sort((a: any, b: any) => b.data.pubDate.getTime() - a.data.pubDate.getTime());

// Paginate posts for first page
const posts = allPosts.slice(0, SITE.postsPerPage);
const totalPages = Math.ceil(allPosts.length / SITE.postsPerPage);

// Structured data for SEO (JSON-LD)
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: 'Dev|Journal',
  url: 'https://earezki.com/',
  author: {
    '@type': 'Person',
    name: 'El Mehdi Arezki',
    url: 'https://earezki.com/about',
    jobTitle: 'Lead Software Engineer',
    sameAs: [
      'https://github.com/earezki',
      'https://www.linkedin.com/in/mehdi-arezki'
    ]
  },
  description: 'Technical blog covering software architecture, backend development, and engineering best practices'
};
---

<BaseLayout 
  title="Dev|Journal - Software Architecture, Backend Development & Technical Insights" 
  description="Technical blog by El Mehdi Arezki - Lead Software Engineer. In-depth articles on software architecture, microservices, domain-driven design, Java, Python, and cloud-native development."
  keywords="software architecture, backend development, microservices, domain-driven design, DDD, Java, Python, Spring Boot, Kubernetes, cloud native, technical blog"
  author="El Mehdi Arezki"
  canonical="/" 
  image="/assets/og-image-default.jpg"
  structuredData={structuredData}
>
  <!-- Screen reader only heading for accessibility -->
  <h1 class="sr-only">
    Dev|Journal - Software Architecture & Backend Development Blog
  </h1>
  
  <!-- Featured Topics Section -->
  <section class="featured-topics fade-in-up" aria-label="Featured topics">
    <h2>Explore Topics</h2>
    <div class="topic-cards stagger-children">
      <a href="/tags/solid/" class="topic-card">
        <span class="topic-icon">üéØ</span>
        <h3>SOLID Principles</h3>
        <p>Learn object-oriented design principles for better code</p>
      </a>
      <a href="/tags/software-architecture/" class="topic-card">
        <span class="topic-icon">üèóÔ∏è</span>
        <h3>Software Architecture</h3>
        <p>Patterns and practices for scalable systems</p>
      </a>
      <a href="/tags/domain-driven-design/" class="topic-card">
        <span class="topic-icon">üìê</span>
        <h3>Domain-Driven Design</h3>
        <p>Build software that reflects your business domain</p>
      </a>
      <a href="/ai-news/" class="topic-card ai-topic">
        <span class="topic-icon">ü§ñ</span>
        <h3>AI News</h3>
        <p>Latest developments in artificial intelligence</p>
      </a>
    </div>
  </section>
  
  <!-- Search functionality -->
  <SearchBox containerId="home" />
  
  <!-- Posts grid -->
  <section class="posts-grid" aria-label="Blog posts">
    {posts.map((post: any) => <PostCard post={post} />)}
  </section>
  
  <!-- Pagination -->
  {totalPages > 1 && (
    <nav class="pagination" aria-label="Pagination">
      <a href="/page/2/" rel="next">
        Older ‚Üí
      </a>
    </nav>
  )}
</BaseLayout>

<style>
  .featured-topics {
    margin: 0 0 3rem;
  }
  
  .featured-topics h2 {
    font-size: 1.75rem;
    margin: 0 0 1.5rem;
    color: var(--color-text);
  }
  
  .topic-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 1.25rem;
    margin-bottom: 2rem;
  }
  
  .topic-card {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 1.5rem;
    background: var(--color-bg-alt);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }
  
  /* Gradient background overlay for all topic cards */
  .topic-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, 
      rgba(99, 102, 241, 0.05) 0%,
      rgba(168, 85, 247, 0.03) 50%,
      rgba(59, 130, 246, 0.04) 100%);
    opacity: 0;
    transition: opacity 0.4s cubic-bezier(0.4, 0.0, 0.2, 1);
    border-radius: var(--radius-md);
  }
  
  html[data-theme="dark"] .topic-card::before {
    background: linear-gradient(135deg, 
      rgba(99, 102, 241, 0.08) 0%,
      rgba(168, 85, 247, 0.06) 50%,
      rgba(59, 130, 246, 0.07) 100%);
  }
  
  /* Gradient border effect */
  .topic-card::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: var(--radius-md);
    padding: 2px;
    background: linear-gradient(135deg, 
      rgba(99, 102, 241, 0.4),
      rgba(168, 85, 247, 0.4),
      rgba(59, 130, 246, 0.4));
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.4s cubic-bezier(0.4, 0.0, 0.2, 1);
  }
  
  .topic-card:hover {
    transform: translateY(-6px) scale(1.02);
    box-shadow: 0 12px 32px -8px rgba(99, 102, 241, 0.2),
                0 6px 20px -4px rgba(168, 85, 247, 0.15);
    border-color: rgba(99, 102, 241, 0.3);
  }
  
  html[data-theme="dark"] .topic-card:hover {
    box-shadow: 0 12px 32px -8px rgba(99, 102, 241, 0.3),
                0 6px 20px -4px rgba(168, 85, 247, 0.25);
  }
  
  .topic-card:hover::before {
    opacity: 1;
  }
  
  .topic-card:hover::after {
    opacity: 1;
  }
  
  .topic-card:active {
    transform: translateY(-4px) scale(1);
  }
  
  .topic-card.ai-topic {
    background: linear-gradient(135deg, 
      rgba(102, 126, 234, 0.06), 
      rgba(118, 75, 162, 0.04));
  }
  
  html[data-theme="dark"] .topic-card.ai-topic {
    background: linear-gradient(135deg, 
      rgba(102, 126, 234, 0.12), 
      rgba(118, 75, 162, 0.08));
  }
  
  /* Enhanced AI topic card gradient */
  .topic-card.ai-topic::before {
    background: var(--ai-gradient);
    opacity: 0.08;
  }
  
  html[data-theme="dark"] .topic-card.ai-topic::before {
    opacity: 0.12;
  }
  
  .topic-card.ai-topic:hover::before {
    opacity: 0.15;
  }
  
  html[data-theme="dark"] .topic-card.ai-topic:hover::before {
    opacity: 0.2;
  }
  
  .topic-icon {
    font-size: 2rem;
    line-height: 1;
    transition: transform 0.4s cubic-bezier(0.4, 0.0, 0.2, 1);
    display: inline-block;
  }
  
  .topic-card:hover .topic-icon {
    transform: scale(1.15) rotate(5deg);
  }
  
  .topic-card h3 {
    margin: 0;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-text);
  }
  
  .topic-card:hover h3 {
    color: var(--color-accent);
  }
  
  .topic-card p {
    margin: 0;
    font-size: 0.85rem;
    color: var(--color-text-alt);
    line-height: 1.4;
  }
  
  .pagination { 
    display: flex; 
    justify-content: flex-end; 
    margin: 2.5rem 0 1rem; 
    font-size: 0.9rem; 
  }
  
  .pagination a { 
    padding: 0.55rem 1rem; 
    background: var(--color-bg-alt); 
    border: 1px solid var(--color-border); 
    border-radius: var(--radius-pill);
    transition: background 0.3s cubic-bezier(0.4, 0.0, 0.2, 1), 
                color 0.3s cubic-bezier(0.4, 0.0, 0.2, 1), 
                border-color 0.3s cubic-bezier(0.4, 0.0, 0.2, 1),
                transform 0.2s cubic-bezier(0.4, 0.0, 0.2, 1),
                box-shadow 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }
  
  .pagination a::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, 
      rgba(99, 102, 241, 0.1),
      rgba(168, 85, 247, 0.1));
    opacity: 0;
    transition: opacity 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
  }
  
  .pagination a:hover { 
    background: var(--color-accent); 
    color: #fff; 
    border-color: var(--color-accent); 
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
  }
  
  .pagination a:hover::before {
    opacity: 1;
  }
  
  .pagination a:active {
    transform: translateY(0);
  }
  
  @media (max-width: 680px) {
    .topic-cards {
      grid-template-columns: 1fr;
    }
  }
</style>
