---
/**
 * Related Posts Component
 * Displays related posts based on shared categories
 */
import { plainExcerpt } from '../utils/excerpt';
import readingTime from '../utils/readingTime';

interface Props {
  posts: any[];
  title?: string;
}

const { posts, title = 'Related Posts' } = Astro.props;

if (posts.length === 0) return null;
---

<section class="related-posts">
  <h2>{title}</h2>
  <div class="related-posts-grid">
    {posts.map(post => {
      const stats = readingTime(post.body);
      const excerpt = plainExcerpt(post.body, 20, 120);
      const postUrl = post.urlPath || `/${post.slug}/`;
      
      return (
        <article class="related-post-card">
          <a href={postUrl} class="related-post-link">
            <h3>{post.data.title}</h3>
            <p class="related-excerpt">{excerpt}</p>
            <div class="related-meta">
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('en-US', { 
                  year: 'numeric', 
                  month: 'short', 
                  day: 'numeric' 
                })}
              </time>
              <span>â€¢</span>
              <span>{stats.text}</span>
            </div>
          </a>
        </article>
      );
    })}
  </div>
</section>

<style>
  .related-posts {
    margin: 3rem 0;
    padding-top: 2rem;
    border-top: 2px solid var(--color-border);
  }
  
  .related-posts h2 {
    font-size: 1.5rem;
    margin: 0 0 1.5rem;
    color: var(--color-text);
  }
  
  .related-posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }
  
  .related-post-card {
    background: var(--color-bg-alt);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: 1.25rem;
    transition: all var(--transition);
  }
  
  .related-post-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }
  
  .related-post-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }
  
  .related-post-card h3 {
    margin: 0 0 0.75rem;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.3;
  }
  
  .related-post-link:hover h3 {
    color: var(--color-accent);
  }
  
  .related-excerpt {
    font-size: 0.85rem;
    color: var(--color-text-alt);
    line-height: 1.5;
    margin: 0 0 0.75rem;
  }
  
  .related-meta {
    font-size: 0.75rem;
    color: var(--color-text-alt);
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }
  
  @media (max-width: 680px) {
    .related-posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
